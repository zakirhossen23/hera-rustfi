{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "pages/CreateEvents/index.jsx",
    "pages/donation/index.jsx",
    "pages/donation/auction/index.jsx",
    "pages/Home/index.jsx",
    "pages/login/index.jsx",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "contracts/hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "pages/near-contracts/contract.js"
  ]
}
